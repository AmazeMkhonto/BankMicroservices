@model TransactionDTO

<form asp-action="Create">
    <br />
    <div class="container border p-3">
        <h1 class="text-center">Withdrawal</h1>

        
        <div class="row">
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Amount</label>
            </div>
            
            <div class="col-10 pb-3">
                <input asp-for="Amount" type="number" class="form-control" placeholder="Enter amount to withdraw" /> <span asp-validation-for="Amount" class="text-danger"></span>
            </div>

            <div class="col-5 offset-2">
                <a asp-action="Index" asp-controller="Account" class="btn-primary btn form-control ">Cancel</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Withdraw" class="btn btn-success form-control" />
            </div>
        </div>

    </div>
</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}