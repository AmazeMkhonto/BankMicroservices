@model TransactionDTO

<form asp-action="Create">
    <br />
    <div class="container border p-3">
        <h1 class="text-white text-center">Withdraw</h1>

        <hr />
        <div class="row">
           
            
            <div class="col-10 pb-3">
                <input asp-for="Amount" type="number" class="form-control" /> <span asp-validation-for="Amount" class="text-danger"></span>
            </div>

            <div class="col-5 offset-2">
                <a asp-action="Index" class="btn-primary btn form-control ">Back to List</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Create" class="btn btn-success form-control" />
            </div>
        </div>

    </div>
</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}